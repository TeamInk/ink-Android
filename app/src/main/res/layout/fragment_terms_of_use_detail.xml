<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvGnbTitle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="@string/terms_of_use_gnb_title"
        android:textAlignment="gravity"
        android:textColor="#323232"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="17dp"
        android:src="@drawable/icons_x_24"
        app:layout_constraintBottom_toBottomOf="@id/tvGnbTitle"
        app:layout_constraintEnd_toEndOf="@id/tvGnbTitle"
        app:layout_constraintTop_toTopOf="@id/tvGnbTitle" />

    <TextView
        android:id="@+id/tvTerms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGnbTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>